{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./js",
    "rootDir": "./ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["./ts/**/*.ts"],
  "exclude": ["./js"]
}
